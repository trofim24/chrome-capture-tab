{
  "manifest_version": 3,
  "name": "Chrome Tab Screen Recorder",
  "version": "1.0.0",
  "description": "Record Chrome tabs using MediaRecorder with VP9 codec",
  "permissions": [
    "tabCapture",
    "activeTab",
    "scripting",
    "tabs",
    "offscreen",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}
