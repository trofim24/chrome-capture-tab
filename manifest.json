{
  "manifest_version": 3,
  "name": "Chrome Tab Screen Recorder",
  "version": "1.0.1",
  "description": "Record Chrome tabs using MediaRecorder with VP9 codec",
  "permissions": [
    "tabCapture",
    "activeTab",
    "scripting",
    "tabs",
    "offscreen",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
